<main>
<div class="container">
<div class="row">
<%= render 'list', books: @books %>

<div class="col-md-8 offset-md-1">
  		<h2>Book detail</h2>
  		<table class="table">
  		  <tbody>
  		    <% @books.each do |book| %>
  		    <tr>
          <td><%= image_tag @user.get_profile_image(100,100) %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td>
          <%= link_to "Edit", edit_book_path(book.id) %>
          </td>
           <td>
           <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %>
          </td>

        </tr>
         <% end %>
      </tbody></table>
    </div>
    </div>
  </div>
</main>