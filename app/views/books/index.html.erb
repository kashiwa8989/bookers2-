<main>
  <div class="container">
    <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>

    <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </tbody>
    </table>

<div class="row">
   <a>
    <%= link_to edit_user_path(@user.id) ,class: 'btn btn-outline-secondary btn-block' do %>
  <!--<a class="btn btn-outline-secondary btn-block edit_user_69297" href="/users/69297/edit">-->
     <i class="fas fa-user-cog"></i>
     <% end %>
</a></div>

  <h1>New book</h1>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

</div>

<div class="col-md-8 offset-md-1">
<h2>Books</h2>

<table class="table table-hover table-inverse">

  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= image_tag @user.get_profile_image(100,100) %>
        </td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    </div>
  </div>
</div>

</main>

